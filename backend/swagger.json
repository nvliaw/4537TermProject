        }
      }
    },
    "Venue": {
      "type": "object",
      "required": [
        "venue_name",
        "address",
        "postal_code",
        "city",
        "province"
      ],
      "properties": {
        "venue_name": {
          "type": "string",
          "example": "BCIT"
        },
        "address": {
          "type": "string",
          "example": "3700 Willingdon Ave"
        },
        "postal_code": {
          "type": "string",
          "example": "V5G 3H2"
        },
        "city": {
          "type": "string",
          "example": "Burnaby"
        },
        "province": {
          "type": "string",
          "example": "BC"
        }
      }
    },
    "Booking": {
      "type": "object",
      "required": [
        "booking_date",
        "venue_id",
        "c_id"
      ],
      "properties": {
